@using System.Security.Cryptography
@using FIT5032_Assignment.Models
@using FIT5032_Assignment.ViewModels
@using Microsoft.AspNet.Identity;
@model FIT5032_Assignment.ViewModels.HomeIndexViewModel


<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

@{
    ViewBag.Title = "Home Page";
}

@{var manager = new UserManager<ApplicationUser>(new Microsoft.AspNet.Identity.EntityFramework.UserStore<ApplicationUser>(new ApplicationDbContext()));
    var currentUser = manager.FindById(User.Identity.GetUserId()); }

@if (Request.IsAuthenticated)
{
    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <!-- Blog Entries Column -->
            <div class="col-md-8">

                @if(@currentUser.FirstName != null)
                {
                <h1 class="my-4">
                    Hello
                    <small> @currentUser.FirstName !</small>
                </h1>

                }else{
                <h1 class="my-4">
                    Hello
                    <small> @User.Identity.GetUserName() !</small>
                </h1>
                }
                @if(User.IsInRole("Nutritionist")){

                    <h4>Here are your next reservation:</h4> 
                    foreach (var booking in Model.BookingModel)
                     {
                         <!-- Blog Post -->
                         <div class="card mb-4">
                             @* <img class="card-img-top" src="http://placehold.it/750x300" alt="Card image cap"> *@
                             <div class="card-body">
                                 <h2 class="card-title">@booking.Title</h2>
                                 <p class="card-text">@booking.Remarks</p>
                                 @* <a href="#" class="btn btn-primary">Read More &rarr;</a> *@
                                 @Html.ActionLink("Read More", "PostDetail", "Home", new { area = " ", @class = "btn btn-primary" })

                             </div>
                             <div class="card-footer text-muted">
                                 @booking.StartTime
                                 <a href="#">@booking.CustomerId</a>
                             </div>
                         </div>
                     }
                }
                else
                {
                 <h4>Here are some posts from your personal nutritionist:</h4> 
                    foreach (var posting in Model.PostingModel)
                     {
                         <!-- Blog Post -->
                         <div class="card mb-4">
                             @* <img class="card-img-top" src="http://placehold.it/750x300" alt="Card image cap"> *@
                             <div class="card-body">
                                 <h2 class="card-title">@posting.Title</h2>
                                 <p class="card-text">@posting.Content</p>
                                 @* <a href="#" class="btn btn-primary">Read More &rarr;</a> *@
                                 @Html.ActionLink("Read More", "PostDetail", "Home", new { area = " ", @class = "btn btn-primary" })

                             </div>
                             <div class="card-footer text-muted">
                                 @posting.PostTime
                                 <a href="#">@posting.NutritionistId</a>
                             </div>
                         </div>
                     }
                }
                
               
                @* <!-- Blog Post --> *@
                @* <div class="card mb-4"> *@
                @*     $1$ <img class="card-img-top" src="http://placehold.it/750x300" alt="Card image cap"> #1# *@
                @*     <div class="card-body"> *@
                @*         <h2 class="card-title"></h2> *@
                @*         <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Reiciendis aliquid atque, nulla? Quos cum ex quis soluta, a laboriosam. Dicta expedita corporis animi vero voluptate voluptatibus possimus, veniam magni quis!</p> *@
                @*         $1$ <a href="#" class="btn btn-primary">Read More &rarr;</a> #1# *@
                @*         @Html.ActionLink("Read More", "PostDetail", "Home", new { area = " ", @class = "btn btn-primary" }) *@
                @* *@
                @*     </div> *@
                @*     <div class="card-footer text-muted"> *@
                @*         Posted on January 1, 2017 by *@
                @*         <a href="#">Start Bootstrap</a> *@
                @*     </div> *@
                @* </div> *@

               

                <!-- Pagination -->
                <ul class="pagination justify-content-center mb-4">
                    <li class="page-item">
                        <a class="page-link" href="#">&larr; Older</a>
                    </li>
                    <li class="page-item disabled">
                        <a class="page-link" href="#">Newer &rarr;</a>
                    </li>
                </ul>

            </div>

            <!-- Sidebar Widgets Column -->
            <div class="col-md-4">

                <!-- Search Widget -->
                <div class="card my-4">
                    <h5 class="card-header">Search</h5>
                    <div class="card-body">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search for...">
                            <span class="input-group-btn">
                                <button class="btn btn-secondary" type="button">Go!</button>
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Categories Widget -->
                <div class="card my-4">
                    <h5 class="card-header">Categories</h5>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-6">
                                <ul class="list-unstyled mb-0">
                                    <li>
                                        <a href="#">Web Design</a>
                                    </li>
                                    <li>
                                        <a href="#">HTML</a>
                                    </li>
                                    <li>
                                        <a href="#">Freebies</a>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-lg-6">
                                <ul class="list-unstyled mb-0">
                                    <li>
                                        <a href="#">JavaScript</a>
                                    </li>
                                    <li>
                                        <a href="#">CSS</a>
                                    </li>
                                    <li>
                                        <a href="#">Tutorials</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Side Widget -->
                <div class="card my-4">
                    <h5 class="card-header">Side Widget</h5>
                    <div class="card-body">
                        You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers!
                    </div>
                </div>

            </div>

        </div>
        <!-- /.row -->

    </div>
    <!-- /.container -->
}
else
{
    <div class="jumbotron">
        <h2 class="title">Welcome to Caulfield Nutrition Clinic!</h2>
        <p class="lead">Caulfield Nutrition Clinic is a professional clinic for people who want to gain long time health advice.</p>
        <hr />
        <p class="description">All regisiter users will get long time further personialized nutrition advice after they met our nutritionist</p>
        @Html.ActionLink("Please Login First", "Login", "Account", routeValues: null, htmlAttributes: new { @class = "btn btn-primary btn-lg" })
    </div>
}





